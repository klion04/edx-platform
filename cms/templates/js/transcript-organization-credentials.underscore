<div class='organization-credentials-content'>
    <label class='transcript-preferance-label selected-provider-account'><%- selectedProvider.name %> <%- gettext('Account') %></label>
    <div class='transcription-account-details'>Please enter your organization's account information. Remember that all courses in your organization will use this account.</div>
    <% if (selectedProvider.key === CIELO24) { %>
    <div class='transcript-preferance-wrapper <%- CIELO24 %>-api-key-wrapper'>
        <label class='transcript-preferance-label' for='<%- CIELO24 %>-api-key'><%- gettext('API Key') %></label>
        <input type='text' id='<%- CIELO24 %>-api-key'>
    </div>
    <div class='transcript-preferance-wrapper <%- CIELO24 %>-api-secret-wrapper'>
        <label class='transcript-preferance-label' for='<%- CIELO24 %>-api-secret'><%- gettext('API Secret') %></label>
        <input type='text' id='<%- CIELO24 %>-api-secret'>
    </div>
    <% } else { %>
    <div class='transcript-preferance-wrapper <%- THREE_PLAY_MEDIA %>-api-secret-wrapper'>
        <label class='transcript-preferance-label' for='<%- THREE_PLAY_MEDIA %>-api-secret'><%- gettext('API Secret') %></label>
        <input type='text' id='<%- THREE_PLAY_MEDIA %>-api-secret'>
    </div>
    <% } %>
</div>

<button class='button action-update-org-credentials' aria-describedby='update-button-text'>
    <%- gettext('Update Settings') %>
    <span id='update-org-credentials-button-text' class='sr'><%-gettext('Press update settings to update course video settings') %></span>
</button>